<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.charspan.myuidemo.TextViewActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="拨打电话:15757101403"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:background="#00FF00"
        android:gravity="center_vertical|center_horizontal"
        android:text="登入网站:http://www.baidu.com"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:background="#FFFF00"
        android:gravity="center_vertical|center_horizontal"
        android:text="发送邮件:xuanyusong@gmail.com"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:gravity="center_vertical|center_horizontal"
        android:text="显示文本"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="一下是用于密码的输入:"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:password="true"
        android:text="用于密码的输入:***"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:drawableTop="@drawable/icon"
        android:gravity="center_vertical|center_horizontal"
        android:text="在上边显示图片"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:drawableBottom="@drawable/icon"
        android:gravity="center_vertical|center_horizontal"
        android:text="在下边显示图片"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:drawableLeft="@drawable/icon"
        android:gravity="center_vertical|center_horizontal"
        android:text="在左边显示图片"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:drawableRight="@drawable/icon"
        android:gravity="center_vertical|center_horizontal"
        android:text="在右边显示图片"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:gravity="center_vertical|center_horizontal"
        android:shadowColor="#00FF00"
        android:shadowRadius="3.0"
        android:text="设置字符串阴影颜色"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:text="只显示一行字符串超出屏幕为的字，只显示一行字符串超出屏幕为的字，只显示一行字符串超出屏幕为的字，"
        android:textColor="#FF0000"
        android:textSize="18dip" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:gravity="center_vertical|center_horizontal"
        android:text="设置显示文字的间隔为0.5"
        android:textColor="#FFFFFF"
        android:textScaleX="0.5"
        android:textSize="18dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="设置文字外形为 bold"
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="设置文字外形为 normal"
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="设置文字外形为 italic"
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="设置文字大小  为10"
        android:textColor="#FF0000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="这是了解android_ui控件的应用，这是了解android_ui控件的应用，这是了解android_ui控件的应用，这是了解android_ui控件的应用，这是了解android_ui控件的应用"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
</LinearLayout>